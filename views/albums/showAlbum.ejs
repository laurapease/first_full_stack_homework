    <h1>Album Show Page</h1>

    <h3><strong>Album: </strong> <%= album.title %></h3>    
    <h4><strong>Artist: </strong> <%= album.artist %></h4>
            <p>Your Rating: <%= album.rating %></p>
        <p>Year Released: <%= album.year %></p>

<form action="/albums/<%= album._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete Album" />
</form>

<form action="/albums/<%= album._id %>/edit" method="GET">
    <input type="submit" value="Edit Album" />
</form>

